#!/bin/bash
# Virtual environment setup script for AI Use Case Navigator
# This script creates and activates a Python virtual environment

# Configuration
VENV_NAME=".venv"
PYTHON_VERSION="python3"
REQUIREMENTS_FILE="requirements.txt"

# Create virtual environment if it doesn't exist
if [ ! -d "$VENV_NAME" ]; then
    echo "Creating virtual environment '$VENV_NAME'..."
    $PYTHON_VERSION -m venv $VENV_NAME
    echo "Virtual environment created."
else
    echo "Virtual environment '$VENV_NAME' already exists."
fi

# Activation instructions
echo ""
echo "To activate the virtual environment, run:"
echo "source $VENV_NAME/bin/activate"
echo ""
echo "After activation, install dependencies with:"
echo "pip install -r $REQUIREMENTS_FILE"
echo ""
echo "To run the application:"
echo "streamlit run app.py"
echo ""
echo "To deactivate the virtual environment when done:"
echo "deactivate"
